@model IEnumerable<SchoolManagement.mvc.DataDB.CourseOfferedTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CoId">Delete</a>
                <a asp-action="AssignTeacher" class="btn btn-success" asp-route-id='@item.CoId'>Assign Teacher</a>
            </td>
        </tr>
}
    </tbody>
</table>
